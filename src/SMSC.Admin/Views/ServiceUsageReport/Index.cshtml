<style>
    /* Center the chart in the middle of the page */
    #chartjs {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 60vh; /* Full viewport height */
        margin: 0;
        background-color: #f9f9f9;
    }
    /* Set a square canvas */
    canvas {
        width: 150px;
        height: 150px;
    }

  
    .chart-canvas {
        width: 100% !important; /* Ensures full width */
        height: 400px !important; /* Fixed height for both charts */
    }


</style>



<title>Service Usage </title>
<h4 class="page-title mt-4 text-center">Service Usage Report</h4>
<div class="row">
    <div class="col-md-12">
        <div id="ReportGrid" class="ag-theme-quartz" style="height: 800px; width: 100%;"></div>
    </div>
</div>




<div id="serviceUsageReportFilterDiv" style="display:none">
    <form id="formServiceUsageReport" data-parsley-validate>
        <h4 class="bg-light p-3 rounded shadow-sm text-center">Service Usage Report</h4>
        <div class="modal-body">

            <!-- Row for Report Type -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <label for="ServiceType" class="form-label">Select Service Type</label>
                    <select class="form-control" id="ServiceType" name="ServiceType" data-parsley-required-message="Select Report Type">
                        
                    </select>
                </div>
            </div>

            <!-- Row for Date Range Picker -->
            <div class="row mb-4" id="dateRangeDiv">
                <div class="col-md-12">
                    <label for="dateRange" class="form-label">Date Range Picker</label>
                    <input type="text" class="form-control" id="dateRange" placeholder="Select date range">
                </div>
            </div>

        </div>

        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<div class="container-fluid card py-4" id="graphDiv">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header" style="background: linear-gradient(to right, #6a11cb, #2575fc); color: white;">
                    <h5 class="mb-0">Bar Chart</h5>
                </div>
                <div class="card-body m-0 p-0">
                    <div id="barAgChart" class="chart-canvas"></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header" style="background: linear-gradient(to right, #ff7e5f, #feb47b); color: white;">
                    <h5 class="mb-0">Pie Chart</h5>
                </div>
                <div class="card-body m-0 p-0">
                    <div id="pieAgChart" class="chart-canvas"></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-0">
                <div class="card-header mb-0" style="background: linear-gradient(to right, #ff6a00, #ee0979); color: white;">
                    <h5 >Line Graph</h5>
                </div>
                <div class="card-body m-0 p-0">
                    <div id="lineAgChart" class="chart-canvas"></div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scriptsAfter {
  
    <script src="~/js/script/serviceUsageReport.js"></script>
}





