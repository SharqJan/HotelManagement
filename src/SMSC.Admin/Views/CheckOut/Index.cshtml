<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Check Out Section</title>
   
    <style>
        /* Custom CSS for full-screen modal */
        .modal-fullscreen {
            max-width: 100%;
            height: 100%;
            margin: 0;
        }

        .carousel-inner {
            height: 200px; /* Adjust the height as needed */
        }

        .carousel-inner-inner {
            height: 400px; /* Adjust the height as needed */
        }

        /*  .carousel-slide {
                    transition: opacity 0.5s ease-in-out;
                } */
        .carousel-item img {
            height: 100%;
            object-fit: cover; /* Ensures the image covers the container without distortion */
        }

        .card-header {
            margin: 0;
            padding: 0
        }

        .card-header {
            position: relative; /* Ensures the carousel is positioned relative to the card header */
            overflow: hidden; /* Prevents content from overflowing outside the card header */
        }

        .carousel {
            width: 100%; /* Ensure the carousel takes up the full width of the card-header */
            height: auto; /* Adjust height as needed */
        }

        /*  .carousel-inner {
                    width: 100%;
                    height: 100%; /* Adjust as necessary */

        .carousel-item {
            width: 100%;
            height: auto; /* Ensure images fit within the carousel item */
            overflow: hidden;
        }

        .carousel-control-prev, .carousel-control-next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 5%;
            height: 5%;
            /* Ensure buttons are within the card */
        }

        .carousel-control-prev {
            left: 0;
        }

        .carousel-control-next {
            right: 0;
        }

        .test {
            height: 400px;
        }

        
        .card-body-bg-image {
            background-image: url('background.jpg');
            background-size: cover; /* Adjust as needed */
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Prevent repeating */
            height: 200px; /* Set a fixed height or adjust based on your needs */
            color: white; /* Adjust text color for contrast */
        }
        

    
    </style>
</head>
<body>



 

    <!-- Container for room cards (if needed) -->
    <div>
        <h3 class="text-center m-3">Check Out Section</h3>
    </div>


    
        <div class="container mt-4">
        <form id="filterCheckOut">
            <div class="row">
                <!-- Guest Name Filter -->
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-user me-2 text-primary"></i>
                        <label for="GuestId" class="fw-bold form-label mb-0">Filter Room by Guest Name</label>
                    </div>
                    <select class="form-select mt-2" id="GuestId" name="GuestId">
                        <option value="" selected>Select Guest</option>
                        <!-- Add options here -->
                    </select>
                </div>

                <!-- Room Number Filter -->
                <div class="col-md-5 mb-3 d-flex align-items-end">
                    <div class="d-flex flex-grow-1 me-3">
                        <i class="fas fa-door-open me-2 text-primary"></i>
                       
                        <div class="flex-grow-1">
                            <label for="RoomNo" class="fw-bold form-label mb-0">Filter by Room No</label>
                            <input type="text" class="form-control mt-2" id="RoomNo" name="RoomNo" placeholder="Enter Room No">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter ml-2"></i> Filter
                    </button>
                </div>
            </div>
    </form>
        </div>
   


    <div id="room-cards-container" class="row mt-4">

        <!-- Cards will be injected here by JavaScript -->
    </div>



    <!-- Modal -->
    <div class="modal fade" id="invoiceModal" tabindex="-1" role="dialog" aria-labelledby="invoiceModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="invoiceModalLabel">Invoice Details</h5>
                    <button type="button" id="cancelButton" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Form -->
                    <form>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="FirstName">First Name</label>
                                    <input type="text" class="form-control" id="FirstName" readonly>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="LastName">Last Name</label>
                                    <input type="text" class="form-control" id="LastName" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="invoiceNumber">Invoice Number</label>
                                    <input type="text" class="form-control" id="invoiceNumber" readonly>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="invoiceDate">Invoice Date</label>
                                    <input type="text" class="form-control" id="invoiceDate" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="invoiceDueDate">Invoice Due Date</label>
                                    <input type="text" class="form-control" id="invoiceDueDate" readonly>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="checkinDateTime">Check-in Date & Time</label>
                                    <input type="text" class="form-control" id="checkinDateTime" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="checkoutDateTime">Checkout Date & Time</label>
                                    <input type="text" class="form-control" id="checkoutDateTime" readonly>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="subTotal">Subtotal</label>
                                    <input type="text" class="form-control" id="subTotal" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="taxName1">Tax Name 1</label>
                                    <input type="text" class="form-control" id="taxName1" readonly>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="taxPercentage1">Tax Percentage 1</label>
                                    <input type="text" class="form-control" id="taxPercentage1" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="taxName2">Tax Name 2</label>
                                    <input type="text" class="form-control" id="taxName2" readonly>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="taxPercentage2">Tax Percentage 2</label>
                                    <input type="text" class="form-control" id="taxPercentage2" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="taxName3">Tax Name 3</label>
                                    <input type="text" class="form-control" id="taxName3" readonly>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="taxPercentage3">Tax Percentage 3</label>
                                    <input type="text" class="form-control" id="taxPercentage3" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="amountPaidInAdvance">Amount Paid in Advance</label>
                                    <input type="text" class="form-control" id="amountPaidInAdvance" readonly>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="totalAmount">Total Amount</label>
                                    <input type="text" class="form-control" id="totalAmount" readonly>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="cancelBottomButton" class="btn btn-secondary" data-dismiss="modal">Pay</button>
                </div>
            </div>
        </div>

        </div>


    @section scriptsAfter {
        <script src="~/js/script/checkOut.js"></script>
    }

</body>
</html>


