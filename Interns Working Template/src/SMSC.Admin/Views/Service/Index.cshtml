
<title>Services</title>



<h4 class="page-title mt-4 text-center">Service Details</h4>
<div class="row">
    <div class="col-md-12">
        <div id="ServicesGrid" class="ag-theme-quartz" style="height: 800px; width: 100%;"></div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" role="dialog" aria-labelledby="addServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addServiceModalLabel">Add Service</h5>
                <button type="button" class="close" onclick="$('#addServiceModal').modal('hide')" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formAddService" data-parsley-validate>
                    <div class="mb-3">
                        <label for="ServiceName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="ServiceName" placeholder="Add New Service" name="ServiceName" required data-parsley-required-message="Name is required">
                    </div>

                    <div class="mb-3">
                        <label for="ServiceCharges" class="form-label">Service Charges</label>
                        <input type="number" class="form-control" id="ServiceCharges" step="0.01" placeholder="e.g., 12.34" name="ServiceCharges" required data-parsley-required-message="Services Charges are Required" >
                    </div>


                    <div class="row mb-3">
                        <div class="col-4">
                            <label class="form-label">Is Active</label>
                        </div>

                        <div class="col-auto">
                            <input class="form-check-input" type="radio" name="IsActive" id="IsActiveYes" value="true">
                            <label class="form-check-label" for="IsActiveYes">
                                Yes
                            </label>
                        </div>

                        <div class="col-auto">

                            <input class="form-check-input" type="radio" name="IsActive" id="IsActiveNo" value="false">
                            <label class="form-check-label" for="IsActiveNo">
                                No
                            </label>

                        </div>
                    </div>


                       
                    



                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success"><i class="fas fa-user-plus"></i> Add New Service</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="updateServiceModal" tabindex="-1" role="dialog" aria-labelledby="updateServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center" id="updateServiceModalLabel">Update Service</h4>
                <button type="button" class="close" onclick="$('#updateServiceModal').modal('hide')" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <form id="formUpdateService" data-parsley-validate>
                    <input type="text" id="updatedServiceId" name="ServiceId" hidden />
                    <div class="mb-3">
                        <label for="serviceName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="updatedServiceName" placeholder="Enter Service Name" name="ServiceName" required data-parsley-required-message="Name is required">
                    </div>

                    <div class="mb-3">
                        <label for="updatedServiceCharges" class="form-label">Service Charges</label>
                        <input type="number" class="form-control" id="updatedServiceCharges" step="0.01" placeholder="e.g., 12.34" name="ServiceCharges" required data-parsley-required-message="Services Charges are Required">
                    </div>

                    <div class="row mb-3">
                        <div class="col-4">
                            <label class="form-label">Is Active</label>
                        </div>

                        <div class="col-auto">
                            <input class="form-check-input" type="radio" name="IsActive" id="updatedIsActiveYes" value="true">
                            <label class="form-check-label" for="updatedIsActiveYes">
                                Yes
                            </label>
                        </div>

                        <div class="col-auto">

                            <input class="form-check-input" type="radio" name="IsActive" id="updatedIsActiveNo" value="false">
                            <label class="form-check-label" for="updatedIsActiveNo">
                                No
                            </label>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success"><i class="fas fa-user-plus"></i> Update Service</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section scriptsAfter {
    <script src="~/js/script/service.js"></script>
   
}
