
<title>User Management</title>



<h4 class="page-title mt-4 text-center">User Details</h4>
<div class="row">
    <div class="col-md-12">
        <div id="UserGrid" class="ag-theme-quartz" style="height: 800px; width: 100%;"></div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="addUserModal" role="dialog" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Add User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="formAddUser" data-parsley-validate>
                    <div class="row">
                        <div class="col-4 mb-3">
                            <label for="FirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="FirstName" placeholder="Enter First Name" name="FirstName" required data-parsley-required-message="First Name is required">
                        </div>
                        <div class="col-4 mb-3">
                            <label for="LastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="LastName" placeholder="Enter Last Name" name="LastName" required data-parsley-required-message="Last Name is required">
                        </div>

                        <div class="col-4 mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email" required data-parsley-required-message="Email is required" data-parsley-type-message="Please enter a valid email">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4 mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Password" required data-parsley-required-message="Password is required" data-parsley-type-message="Please enter a valid Password">
                        </div>

                        <div class="col-4 mb-3">
                            <label for="PhoneNo" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="PhoneNo" placeholder="Enter Phone Number" name="PhoneNo" required pattern="\d*" data-parsley-required-message="Phone number is required" data-parsley-pattern-message="Please enter a valid phone number containing only digits">
                        </div>

                        <div class="col-4 mb-3">
                            <label for="RoleId" class="form-label">Select Role</label>
                            <select class="js-example-basic-single js-states form-control" id="RoleId" name="RoleId" required data-parsley-required-message="Role is required"></select>

                        </div>
                    </div>
                    <div class="row">

                        <div class="col-12 mb-3">
                            <label for="ProfileImage" class="form-label">Upload Profile Picture</label>
                            <input type="file" class="form-control" id="ProfileImage" name="ProfileImage">
                        </div>
                        <div class="row mb-3">
                            <div class="col-4">
                                <label class="form-label">Is Active</label>
                            </div>

                            <div class="col-auto">
                                <input class="form-check-input" type="radio" name="IsActive" id="IsActiveYes" value="true">
                                <label class="form-check-label" for="IsActiveYes">
                                    Yes
                                </label>
                            </div>

                            <div class="col-auto">

                                <input class="form-check-input" type="radio" name="IsActive" id="IsActiveNo" value="false">
                                <label class="form-check-label" for="IsActiveNo">
                                    No
                                </label>

                            </div>
                        </div>


                        <div class="modal-footer">
                            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateUserModal" tabindex="-1" role="dialog" aria-labelledby="updateUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center" id="updateUserModalLabel">Update User</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formUpdateUser" data-parsley-validate>

                    <div class="row">
                        <input id="updatedUserId" name="UserId" hidden />
                        <div class="col-4 mb-3">
                            <label for="updatedFirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="updatedFirstName" placeholder="Enter First Name" name="FirstName" required data-parsley-required-message="First Name is required">
                        </div>
                        <div class="col-4 mb-3">
                            <label for="updatedLastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="updatedLastName" placeholder="Enter Last Name" name="LastName" required data-parsley-required-message="Last Name is required ">
                        </div>

                        <div class="col-4 mb-3">
                            <label for="updatedEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="updatedEmail" name="Email" placeholder="Enter Email" required data-parsley-required-message="Email is required" data-parsley-type-message="Please enter a valid email">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4 mb-3">
                            <label for="updatedPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="updatedPassword" name="Password" placeholder="Enter Password" required data-parsley-required-message="Password is required" data-parsley-type-message="Please enter a valid Password">
                        </div>

                        <div class="col-4 mb-3">
                            <label for="updatedPhoneNo" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="updatedPhoneNo" placeholder="Enter Phone Number" name="PhoneNo" required pattern="\d*" data-parsley-required-message="Phone number is required" data-parsley-pattern-message="Please enter a valid phone number containing only digits">
                        </div>

                        <div class="col-4 mb-3">
                            <label for="updatedRoleId" class="form-label">Select Role</label>
                            <select class="js-example-basic-single js-states form-control" id="updatedRoleId" name="RoleId" required data-parsley-required-message="Role is required"></select>

                        </div>
                    </div>
                    <div class="row">

                        <div class="col-12 mb-3">
                            <label for="updatedProfileImage" class="form-label">Upload Profile Picture</label>
                            <span id="uploadedImage" class="badge badge-outline-success">Image Uploaded</span>
                            <input type="file" class="form-control" id="updatedProfileImage" name="ProfileImage">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4">
                            <label class="form-label">Is Active</label>
                        </div>

                        <div class="col-auto">
                            <input class="form-check-input" type="radio" name="IsActive" id="updatedIsActiveYes" value="true">
                            <label class="form-check-label" for="updatedIsActiveYes">
                                Yes
                            </label>
                        </div>

                        <div class="col-auto">

                            <input class="form-check-input" type="radio" name="IsActive" id="updatedIsActiveNo" value="false">
                            <label class="form-check-label" for="updatedIsActiveNo">
                                No
                            </label>

                        </div>
                    </div>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section scriptsAfter {
    <script src="~/js/script/user.js"></script>
}


