
<title>Guest Management</title>

<style>

    .select2 {
        width: 300px
    }
</style>

<h4 class="page-title mt-4 text-center">Guest Details</h4>
<div class="row">
    <div class="col-md-12">
        <div id="GuestGrid" class="ag-theme-quartz" style="height: 800px; width: 100%;"></div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="addGuestModal" tabindex="-1" role="dialog" aria-labelledby="addGuestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addGuestModalLabel">Add Guest</h5>
                <button type="button" class="close" onclick="$('#addGuestModal').modal('hide')" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formAddGuest" data-parsley-validate>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="FirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="FirstName" placeholder="Enter First Name" name="FirstName" required data-parsley-required-message="First Name is required">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="LastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="LastName" placeholder="Enter Last Name" name="LastName" required data-parsley-required-message="Last Name is required">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email" required data-parsley-required-message="Email is required" data-parsley-type-message="Please enter a valid email">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="Address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="Address" placeholder="Enter Address Name" name="Address" required data-parsley-required-message="Address is required">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="PhoneNo" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="PhoneNo" placeholder="Enter Phone Number" name="PhoneNo" required pattern="\d*" data-parsley-required-message="Phone number is required" data-parsley-pattern-message="Please enter a valid phone number containing only digits">
                         
                        </div>

                        <div class="col-md-4 mb-3" id="ParentDiv">
                            <label for="ParentId" class="form-label">Select Parent Guest</label>
                            <select class="js-example-basic-single js-states form-control" id="ParentId" name="ParentId"  data-parsley-required-message="Select Parent Guest"></select>

                        </div>
                      

                       

                        
                    </div>


                   

                    <div class="row mb-3">
                        <div class="col-auto">
                            <label class="form-label">Assign Parent</label>
                        </div>

                        <div class="col-auto">
                            <input class="form-check-input" type="radio" name="AssignParent" id="AssignParentYes" value="true">
                            <label class="form-check-label" for="AssignParentYes">
                                Yes
                            </label>
                        </div>

                        <div class="col-auto">

                            <input class="form-check-input" type="radio" name="AssignParent" id="AssignParentNo" value="false" checked>
                            <label class="form-check-label" for="AssignParentNo">
                                No
                            </label>

                        </div>


                    </div>
                    <div class="row" id="CardDiv">




                        <div class="col-md-6 mb-3">
                            <label for="IdCardType" class="form-label">Id Card Type</label>
                            <select class="js-example-basic-single js-states form-control ParentClass" id="IdCardType" name="IdCardType" required data-parsley-required-message="Id Card Type is required">

                                <option value=""> Select Id Card Type </option>
                                <option value="Aadhaar Card">Aadhaar Card  </option>
                                <option value="Passport"> Passport  </option>
                                <option value="Pan Card"> Pan Card</option>
                                <option value="Driving Liscence"> Driving Liscence</option>


                            </select>

                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="IdCard" class="form-label">Upload Id Card</label>
                            <input type="file" class="form-control ParentClass" id="IdCard" name="IdCard" required data-parsley-required-message="Please Upload Id Card ">
                        </div>
                    </div>
                    
               

                    <div class="row mb-3">
                        <div class="col-auto">
                            <label class="form-label">Is Active</label>
                        </div>

                        <div class="col-auto">
                            <input class="form-check-input" type="radio" name="IsActive" id="IsActiveYes" value="true">
                            <label class="form-check-label" for="IsActiveYes">
                                Yes
                            </label>
                        </div>

                        <div class="col-auto">

                            <input class="form-check-input" type="radio" name="IsActive" id="IsActiveNo" value="false">
                            <label class="form-check-label" for="IsActiveNo">
                                No
                            </label>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="updateGuestModal" tabindex="-1" role="dialog" aria-labelledby="updateGuestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateGuestModalLabel">Update Guest</h5>
                <button type="button" class="close" onclick="$('#updateGuestModal').modal('hide')" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formUpdateGuest" data-parsley-validate>
                    <input type="text" id="RoomId" name="RoomId" hidden />
                    <input type="text" id="GuestId"  name="GuestId" hidden />
                    <div class="row">
                        <div class="col-4 mb-3">
                            <label for="updatedFirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="updatedFirstName" placeholder="Enter First Name" name="FirstName" required data-parsley-required-message="First Name is required is required">
                        </div>
                        <div class="col-4 mb-3">
                            <label for="updatedLastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="updatedLastName" placeholder="Enter Last Name" name="LastName" required data-parsley-required-message="Last Name is required is required">
                        </div>

                        <div class="col-4 mb-3">
                            <label for="updatedEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="updatedEmail" name="Email" placeholder="Enter Email" required data-parsley-required-message="Email is required" data-parsley-type-message="Please enter a valid email">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4 mb-3">
                            <label for="updatedAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" id="updatedAddress" placeholder="Enter Address Name" name="Address" required data-parsley-required-message="Address is required">
                        </div>

                        <div class="col-4 mb-3">
                            <label for="updatedPhoneNo" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="updatedPhoneNo" placeholder="Enter Phone Number" name="PhoneNo" required pattern="\d*" data-parsley-required-message="Phone number is required" data-parsley-pattern-message="Please enter a valid phone number containing only digits">

                        </div>

                        <div class="col-4 mb-3" id="updatedParentDiv">
                            <label for="updatedParentId" class="form-label">Select Parent Guest </label>
                            <select class="js-example-basic-single js-states form-control" id="updatedParentId" name="ParentId" data-parsley-required-message="Select Parent Guest"></select>

                        </div>





                    </div>


                    <div class="row" id="GuestServices">


                        <div class="col-4 mb-3" >
                            <label for="ServiceIds" class="form-label">Select Service</label>
                            <select class=" form-control select2" id="ServiceIds" name="ServiceIds" multiple ></select>

                        </div>


                    </div>

                    <div class="row mb-3">
                        <div class="col-auto">
                            <label class="form-label">Assign Parent</label>
                        </div>

                        <div class="col-auto">
                            <input class="form-check-input" type="radio" name="AssignParent" id="updatedAssignParentYes" value="true">
                            <label class="form-check-label" for="updatedAssignParentYes">
                                Yes
                            </label>
                        </div>

                        <div class="col-auto">

                            <input class="form-check-input" type="radio" name="AssignParent" id="updatedAssignParentNo" value="false" checked>
                            <label class="form-check-label" for="updatedAssignParentNo">
                                No
                            </label>

                        </div>


                    </div>
                    <div class="row" id="updatedCardDiv">

                        <div class="col-md-6 mb-3">
                            <label for="updatedIdCardType" class="form-label">Id Card Type</label>
                            <select class="js-example-basic-single js-states form-control ParentClass" id="updatedIdCardType" name="IdCardType" required data-parsley-required-message="Id Card Type is required">

                                <option value="" selected> Select Id Card Type </option>
                                <option value="Aadhaar Card">Aadhaar Card  </option>
                                <option value="Passport"> Passport  </option>
                                <option value="Pan Card"> Pan Card</option> 
                                <option value="Driving Liscence"> Driving Liscence</option>


                            </select>

                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="updatedIdCard" class="form-label">Upload Id Card</label>
                            <span id="uploadedImage" class="badge badge-outline-success">Image Uploaded</span>
                            <input type="file" class="form-control ParentClass" id="updatedIdCard" name="IdCard" required data-parsley-required-message="Please Upload Id Card ">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-auto">
                            <label class="form-label">Is Active</label>
                        </div>

                        <div class="col-auto">
                            <input class="form-check-input" type="radio" name="IsActive" id="updatedIsActiveYes" value="true">
                            <label class="form-check-label" for="IsActiveYes">
                                Yes
                            </label>
                        </div>

                        <div class="col-auto">

                            <input class="form-check-input" type="radio" name="IsActive" id="updatedIsActiveNo" value="false">
                            <label class="form-check-label" for="IsActiveNo">
                                No
                            </label>

                        </div>
                    </div>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section scriptsAfter {
    <script src="~/js/script/guest.js"></script>
}




